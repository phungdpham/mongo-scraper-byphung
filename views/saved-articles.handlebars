<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron bg-secondary">
        <h1 class="display-4 text-center text-white">MONGO SCRAPER</h1>
        <p class="lead text-center text-white">NEW YORK TIMES EDITION</p>
    </div>
    <div class="cold-md-12">
        {{#if article}} {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p>{{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add
                    a Note</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="panel panel=default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Notes Modal clicked-->
{{#each article}}
    {{> notes-modal }}
{{/each}}